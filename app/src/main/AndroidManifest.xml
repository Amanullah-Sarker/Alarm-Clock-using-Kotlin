<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amanullah.alarmclock">

    <application
        android:allowBackup="true"
        android:icon="@drawable/notifications"
        android:label="@string/app_name"
        android:roundIcon="@drawable/notifications"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlarmClock">
        <activity
            android:name=".activity.DestinationActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AlarmActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".adapter.AlarmReceiver" />
    </application>

</manifest>